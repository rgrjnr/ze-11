{% macro card(title, content, link, image) %}
    <a href="{{ link }}" class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
        {% if image %}
            <img src="{{ image }}" alt="{{ title }}" class="w-full h-48 object-cover">
            {% endif %}
            <div class="p-6">
                {% if title %}
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">{{ title }}</h3>
                {% endif %}
                {% if content %}
                    <p class="text-gray-600 mb-4">{{ content }}</p>
                {% endif %}
            </div>
        </a>
    {% endmacro %}